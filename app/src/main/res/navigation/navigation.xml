<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/legacy_txn_list_fragment">

    <fragment
        android:id="@+id/legacy_txn_list_fragment"
        android:name="com.xpense.android.presentation.txn.legacy.list.LegacyTxnListFragment"
        android:label="@string/main_screen_title"
        tools:layout="@layout/fragment_legacy_txn_list" >
        <action
            android:id="@+id/action_legacy_txn_list_fragment_to_txn_add_edit_fragment"
            app:destination="@id/legacy_txn_add_edit_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/legacy_txn_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/legacy_txn_add_edit_fragment"
        android:name="com.xpense.android.presentation.txn.legacy.add_edit.LegacyTxnAddEditFragment"
        android:label="@string/transaction_screen_title"
        tools:layout="@layout/fragment_legacy_txn_add_edit">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="xpense://xpense.com/transaction" />
        <argument
            android:name="transactionId"
            android:defaultValue="0L"
            app:argType="long" />
        <argument
            android:name="sms"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/compose_playground_fragment"
        android:name="com.xpense.android.presentation.xperiments.compose.playground.ComposePlaygroundFragment"
        android:label="@string/compose_playground_screen_title" >
    </fragment>
    <fragment
        android:id="@+id/compose_tutorial_fragment"
        android:name="com.xpense.android.presentation.xperiments.compose.tutorial.ComposeTutorialFragment"
        android:label="@string/compose_tutorial_screen_title" >
    </fragment>
    <fragment
        android:id="@+id/compose_basics_fragment"
        android:name="com.xpense.android.presentation.xperiments.compose.basics.ComposeBasicsFragment"
        android:label="@string/compose_basics_screen_title" >
    </fragment>
    <fragment
        android:id="@+id/compose_txn_list_fragment"
        android:name="com.xpense.android.presentation.txn.compose.list.ComposeTxnListFragment"
        android:label="@string/main_screen_title" >
        <action
            android:id="@+id/action_compose_txn_list_fragment_to_compose_txn_add_edit_fragment"
            app:destination="@id/compose_txn_add_edit_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/compose_txn_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/compose_txn_add_edit_fragment"
        android:name="com.xpense.android.presentation.txn.compose.add_edit.ComposeTxnAddEditFragment"
        android:label="@string/transaction_screen_title" >
        <argument
            android:name="transactionId"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/compose_examples_fragment"
        android:name="com.xpense.android.presentation.xperiments.compose.examples.ExamplesFragment"
        android:label="Compose Examples" >
    </fragment>
    <fragment
        android:id="@+id/about_fragment"
        android:name="com.xpense.android.presentation.about.AboutFragment"
        android:label="@string/about_screen_title" />
    <fragment
        android:id="@+id/my_android_view_model_fragment"
        android:name="com.xpense.android.presentation.xperiments.androidviewmodel.MyAndroidViewModelFragment"
        android:label="@string/android_view_model_screen_title" />
    <fragment
        android:id="@+id/auth_fragment"
        android:name="com.xpense.android.presentation.xperiments.auth.AuthFragment"
        android:label="@string/auth_screen_title"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_login_fragment_to_settings_fragment"
            app:destination="@id/settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.xpense.android.presentation.xperiments.auth.SettingsFragment"
        android:label="@string/settings_screen_title" />
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.xpense.android.presentation.xperiments.auth.LoginFragment"
        android:label="@string/login_screen_title" />
    <fragment
        android:id="@+id/maps_fragment"
        android:name="com.xpense.android.presentation.xperiments.map.MapsFragment"
        android:label="@string/map_screen_title"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/property_animation_fragment"
        android:name="com.xpense.android.presentation.xperiments.animations.PropertyAnimationFragment"
        android:label="@string/property_animation_screen_title"
        tools:layout="@layout/fragment_property_animation" />
    <fragment
        android:id="@+id/motion_click_fragment"
        android:name="com.xpense.android.presentation.xperiments.motionlayout.MotionClickFragment"
        android:label="@string/motion_click_screen_title"
        tools:layout="@layout/fragment_motion_click" />
    <fragment
        android:id="@+id/motion_drag_fragment"
        android:name="com.xpense.android.presentation.xperiments.motionlayout.MotionDragFragment"
        android:label="@string/motion_drag_screen_title"
        tools:layout="@layout/fragment_motion_drag" />
    <fragment
        android:id="@+id/motion_toolbar_fragment"
        android:name="com.xpense.android.presentation.xperiments.motionlayout.MotionToolbarFragment"
        android:label="@string/motion_toolbar_screen_title"
        tools:layout="@layout/fragment_motion_toolbar" />
</navigation>
